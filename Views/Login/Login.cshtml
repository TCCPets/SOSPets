@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="/css/login.css">
<section class="container">
    <div class="login-container">
        <div class="circle circle-one"></div>
        <div class="form-container">
            <img src="/img/cachorro-removebg-preview.png" alt="illustration" class="illustration" />
            <P class="opacity">LOGIN</P>

            <form>
                <input type="text" placeholder="Usuário" />
                <input type="password" placeholder="Senha" />
                <button class="opacity">Entrar</button>
            </form>
            <div class="register-forget opacity">
                <a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Cadastro">CADASTRAR</a>
                <a href="">Esqueci minha senha</a>
            </div>
        </div>
        <div class="circle circle-two"></div>
    </div>
    <div class="theme-btn-container"></div>
</section>
<script type="module" src="/js/Login.js"></script>